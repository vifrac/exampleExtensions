{
  "manifest_version": 2,
  "name": "cyberpunky",
  "version": "1.0",

  "description": "Adds a browser action icon to the toolbar Click the button to choose a beast. The active tab's body content is then replaced with a picture of the chosen cyberpunk city",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "images/icons/icon.svg",
    "32": "images/icons/icon.svg"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "images/icons/icon.svg",
    "default_title": "cyberpunky",
    "default_popup": "popup/choose_cyberpunk.html"
  },

  "web_accessible_resources": [
    "images/cb1.jpg",
    "images/cb2.jpg",
    "images/cb3.jpg"
  ]
}
